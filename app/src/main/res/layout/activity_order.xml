<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_MovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="TitleFilm"
        android:textAlignment="center"
        android:background="@color/orange"
        android:paddingBottom="10sp"
        android:layout_marginBottom="15sp"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/ly_spinners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_MovieTitle"
        android:gravity="center"
        >
                <Spinner
                    android:id="@+id/dateSpinner"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    android:layout_marginEnd="20dp"
                   />

                <Spinner
                    android:id="@+id/timeSpinner"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"
                    />
    </LinearLayout>

    <!-- Bioscoop plaatsen -->
    <FrameLayout
        android:id="@+id/fl_cinemaSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_spinners"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_background">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/ivCinemaScreen"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:src="@drawable/tijdelijke_bioscoop_scherm"
        />

