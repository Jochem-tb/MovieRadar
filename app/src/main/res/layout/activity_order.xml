    <!-- Ticket informatie -->
    <FrameLayout
        android:id="@+id/fl_ticketinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_cinemaSeats"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:background="@drawable/border_background">

        <TextView
            android:id="@+id/label_countChairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_count_chairs"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_countChairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:text="@string/standard_count_chairs"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/label_kindOfTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_kind_ticket"
            android:layout_marginTop="27.5dp"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/kindOfTicketSpinner"
            android:layout_width="185dp"
            android:layout_height="37dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_marginTop="25dp"
            android:layout_marginStart="150dp"
            />

        <TextView
            android:id="@+id/label_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_total_price"
            android:layout_marginTop="55dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginStart="150dp"
            android:text="@string/standard_total_price"
            android:textSize="20sp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/fl_ticketinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
