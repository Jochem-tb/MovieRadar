        android:layout_gravity="center_horizontal"
        android:id="@+id/ivCinemaScreen"
        android:layout_width="800px"
        android:layout_height="100px"
        android:layout_marginTop="10dp"
        android:src="@drawable/tijdelijke_bioscoop_scherm"
        />

